                <td>@slider.Heading</td>
                <td> <a class="btn btn-warning" asp-area="Admin" asp-controller="Slider" asp-action="SEdit" asp-route-id="@slider.Id">Edit</a></td>




            </tr>
        }


    </tbody>




</table>


