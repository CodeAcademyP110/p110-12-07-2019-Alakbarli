@model  IEnumerable<Blog>
@foreach (var diva in Model)
{
    <div class="mt-2 col-md-6">
        <div class="blog d-block d-lg-flex">
            <div class="bg-image" style="background-image: url('/img/@diva.Image');"></div>
            <div class="text">
                <h3>@diva.Heading</h3>
                <p class="sched-time">
                    <span><span class="fa fa-calendar"></span>@diva.Date</span> <br>
                </p>
                <p>@diva.Content...</p>

                <p><a href="#" class="btn btn-primary btn-sm">Read More</a></p>

            </div>

        </div>
    </div>
}